{
  "name": "dawn-starter",
  "type": "module",
  "scripts": {
    "dev": "run-p -sr dev:shopify dev:vite",
    "dev:shopify": "shopify theme dev --store $npm_package_config_store",
    "dev:vite": "vite",
    "build": "vite build",
    "preview": "npm run build && shopify theme push -u --store $npm_package_config_store",
    "lint": "prettier --write ."
  },
  "config": {
    "store": "wiebe-checkout"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@shopify/prettier-plugin-liquid": "^1.2.2",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.47.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.27",
    "prettier": "^3.0.0",
    "prettier-plugin-tailwindcss": "^0.4.1",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.1.6",
    "vite": "^4.4.7",
    "vite-plugin-shopify": "^2.1.1"
  },
  "dependencies": {
    "@github/catalyst": "^1.6.0"
  }
}
