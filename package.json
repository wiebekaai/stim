{
  "name": "dawn-starter",
  "type": "module",
  "scripts": {
    "dev": "echo \"ap.dev.\" > snippets/ap.dev.liquid && concurrently -n 'üì¶,üè™' -c yellow,green -k \"npm:watch\" \"npm:start\"",
    "start": "shopify theme dev --environment development --live-reload full-page",
    "build": "rimraf -g assets/ap.* snippets/ap.dev.liquid && parcel build $npm_package_config_source",
    "watch": "rimraf -g assets/ap.dev.* .parcel-cache && parcel watch --no-hmr --no-autoinstall --log-level warn $npm_package_config_source"
  },
  "config": {
    "source": "src/main.ts src/main.css"
  },
  "targets": {
    "default": {
      "distDir": "./assets",
      "outputFormat": "esmodule",
      "sourceMap": false,
      "engines": {
        "browsers": [
          "last 3 chrome version",
          "last 3 firefox version",
          "last 2 safari version"
        ]
      }
    }
  },
  "parcel-namer-rewrite": {
    "hashing": "never",
    "profiles": {
      "production": {
        "rules": {
          "(.*)": "ap.$1"
        }
      },
      "development": {
        "rules": {
          "(.*)": "ap.dev.$1"
        }
      }
    }
  },
  "devDependencies": {
    "@parcel/config-default": "^2.9.3",
    "@parcel/resolver-glob": "^2.9.3",
    "@shopify/prettier-plugin-liquid": "^1.2.3",
    "concurrently": "^8.2.1",
    "parcel": "^2.9.3",
    "parcel-namer-custom": "^0.2.0",
    "parcel-namer-rewrite": "2.0.0-rc.3",
    "postcss": "^8.4.29",
    "postcss-import": "^15.1.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.1",
    "tailwindcss": "^3.3.3"
  }
}
